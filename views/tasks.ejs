<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css"> <!-- Optional if you want to add custom styles -->
    <title>Your Tasks</title>
    
</head>
<body>
    <h1>Your Tasks</h1>
    <form action="/tasks" method="POST">
        <div>
            <label for="title">Task Title:</label>
            <input type="text" name="title" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <input type="text" name="description">
        </div>
        <div>
            <label for="dueDate">Due Date:</label>
            <input type="date" name="dueDate">
        </div>
        <button type="submit">Add Task</button>
    </form>
    <!-- Add Bootstrap CSS -->

<h2 class="text-center text-success border-bottom pb-3">Task List</h2>
<div class="container">
    <ul class="list-group">
        <% tasks.forEach(task => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong class="text-dark"><%= task.title %></strong><br>
                    <small class="text-muted"><%= task.description || 'No description' %></small>
                </div>
                <span class="badge badge-warning badge-pill">
                    <%= task.dueDate ? new Date(task.dueDate).toLocaleDateString() : 'No due date' %>
                </span>
            </li>
        <% }) %>
    </ul>
</div>
<!-- back home  -Home button -->
<div class="text-center mt-4">
    <a href="index.ejs" class="btn btn-primary">Back to Home</a>
</div>

<!-- Add Bootstrap JS (Optional) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
